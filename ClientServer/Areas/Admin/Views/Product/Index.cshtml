@model IEnumerable<ClientServer.Models.EntityFramework.ThongTinSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="content" class="container-fluid">
    <div class="card">
        <div class="card-header font-weight-bold d-flex justify-content-between align-items-center"
             style="box-sizing: border-box">
            <h5 class="m-0 ">Danh sách sản phẩm</h5>
            <div class="form-inline">
                <form action="">
                    <input type="" class="form-control form-search" name="keyword" autocomplete="off"
                           placeholder="Nhập tên sản phẩm ...">
                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="analytic">
                <a href="">Tất cả (100)</a>
                <a href="">Làm chung (100)</a>
                <a href="">Làm riêng (100)</a>
            </div>
            @if (Model != null)
            {
                var count = 0;
                <table class="table table-striped table-checkall">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Mã sản phẩm</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Số đăng ký</th>
                            <th scope="col">Hạn sử dụng</th>
                            <th scope="col">Ngày đăng ký</th>
                            <th scope="col">Quy cách</th>
                            <th scope="col">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td scope="row">@count</td>
                                <td>@item.MaSanPham</td>
                                <td>@item.TenSanPham</td>
                                <td>@item.SoDangKy</td>
                                <td>@item.HanSuDung.Value.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayDangKy.Value.ToString("dd/MM/yyyy")</td>
                                <td>@item.QuyCach</td>
                                <td>
                                    <a href="/Admin/Product/Edit/@item.MaSanPham" class="btn btn-success btn-sm rounded-0 text-white" type="button"
                                       data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="" class="btn btn-danger btn-sm rounded-0 text-white" type="button"
                                       data-toggle="modal" data-placement="top" title="Xóa">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
@model ClientServer.Models.EntityFramework.DanhMucCongNhanThucHienKhoan

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content" class="container-fluid">
    <div class="card">
        <div class="card-header font-weight-bold">
            Chỉnh sửa
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UpdateEmployee", "Diary", FormMethod.Post))
            {
                if (TempData["thongbao"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <strong>@TempData["thongbao"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group d-none">
                    @Html.LabelFor(model => model.MaDanhMucCongNhanThucHienKhoan, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.MaDanhMucCongNhanThucHienKhoan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MaDanhMucCongNhanThucHienKhoan, "", new { @class = "text-danger font-italic" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaNhatKi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.MaNhatKi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MaNhatKi, "", new { @class = "text-danger font-italic" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaCongNhan, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.DropDownList("MaCongNhan", (IEnumerable<SelectListItem>)ViewBag.DanhSachCongNhan, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.MaCongNhan, "", new { @class = "text-danger font-italic" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianBatDauCongViec, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ThoiGianBatDauCongViec, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ThoiGianBatDauCongViec, "", new { @class = "text-danger font-italic" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianKetThucCongViec, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ThoiGianKetThucCongViec, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ThoiGianKetThucCongViec, "", new { @class = "text-danger font-italic" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="cập nhật" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

